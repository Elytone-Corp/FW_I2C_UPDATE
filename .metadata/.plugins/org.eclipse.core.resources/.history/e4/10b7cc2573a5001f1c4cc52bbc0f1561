/**
 * @file        main.c
 * @brief       I2C Master-Slave Transaction
 */


#include <stdio.h>
#include "bootloader.h"
#include "log_manager.h"
#include "reboot_manager.h"
#include "state_manager.h"
#include "i2c_driver.h"

int main(void) {
    printf("[System] Bootloader starting...\n");

    // Initialize Logger for proper debug output
    LogManager_Init();
    Logger_SetLevel(LOG_LEVEL_DEBUG);

    // Initialize the bootloader system
    Bootloader_Init();

    // Check and handle state
    if (Bootloader_GetState() == BOOTLOADER_UPDATE) {
        LogManager_Log(LOG_LEVEL_INFO, "[System] Update process in progress...");
        // Continue firmware update if needed
    } else if (Bootloader_GetState() == BOOTLOADER_BOOT) {
        LogManager_Log(LOG_LEVEL_INFO, "[System] Booting firmware...");
        Bootloader_ValidateAndBoot();  // Boot active firmware
    } else if (Bootloader_GetState() == BOOTLOADER_ROLLBACK) {
        LogManager_Log(LOG_LEVEL_WARNING, "[System] Rollback state detected, initiating rollback...");
        Bootloader_Rollback();
    } else {
        LogManager_Log(LOG_LEVEL_ERROR, "[System] Bootloader encountered critical error: %d", Bootloader_GetLastError());
    }

    return 0;
}































































